<Window x:Class="TOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TOS" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ComboBox Grid.Row="0" Height="auto" Width="400" VerticalAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" >
            <ComboBoxItem x:Name="tos1" Content="ТОС1" IsSelected="True"></ComboBoxItem>
            <ComboBoxItem x:Name="tos2" Content="ТОС2" ></ComboBoxItem>
            <ComboBoxItem x:Name="tos3" Content="ТОС3" ></ComboBoxItem>
            <ComboBoxItem x:Name="tos4" Content="ТОС4" ></ComboBoxItem>
            <ComboBoxItem x:Name="tos5" Content="ТОС5" ></ComboBoxItem>
            <ComboBoxItem x:Name="tos6" Content="ТОС6" ></ComboBoxItem>
        </ComboBox>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="101" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.17*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="ff" Text="Решение Думы:" HorizontalAlignment="Right" Width="104" Margin="0,70,10,15" Height="16" Grid.Column="1"/>
            <TextBlock Text="Устав:" HorizontalAlignment="Right" Margin="0,17,82,68" Height="16" Width="32" Grid.Column="1"/>
            <TextBlock Text="Председатель:" HorizontalAlignment="Left" Margin="0,14,0,71" Height="16" Width="79" Grid.Row="0" Grid.Column="0"/>
            <TextBlock Text="Дата основания:" HorizontalAlignment="Left" Margin="0,45,0,40" Height="16" Width="90" Grid.Row="0" Grid.Column="0"/>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="auto" VerticalAlignment="Bottom" Width="auto" Grid.Row="1" Grid.Column="0" >
                <Image Stretch="UniformToFill"/>
            </Border>
            <Button Name="StructureButton" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="StructureButton_Click" Background="{x:Null}" BorderThickness="0" Width="98" Grid.Row="1" Grid.Column="1">
                <Hyperlink Command="{Binding SomeCommand}" CommandParameter="{Binding}">Структура</Hyperlink>
            </Button>
        </Grid>
    </Grid>
</Window>
