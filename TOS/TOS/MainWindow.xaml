<Window x:Class="TOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TOS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Content="Кнопочка"/>
        <ComboBox Grid.Row="0"  Width="400" Height="auto" VerticalAlignment="Top" >
            <ComboBoxItem x:Name="tos1" Content="ТОС1" IsSelected="True"></ComboBoxItem>
            <ComboBoxItem x:Name="tos2" Content="ТОС2" ></ComboBoxItem>
            <ComboBoxItem x:Name="tos3" Content="ТОС3" ></ComboBoxItem>
            <ComboBoxItem x:Name="tos4" Content="ТОС4" ></ComboBoxItem>
            <ComboBoxItem x:Name="tos5" Content="ТОС5" ></ComboBoxItem>
            <ComboBoxItem x:Name="tos6" Content="ТОС6" ></ComboBoxItem>

        </ComboBox>
    </Grid>
</Window>
